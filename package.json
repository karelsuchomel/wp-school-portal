{
	"name": "wp-school-portal",
	"private": true,
	"dependencies": {
		"solid-js": "^0.26.5"
	},
	"devDependencies": {
		"@babel/core": "^7.2.2",
		"@babel/preset-env": "^7.2.3",
		"@babel/preset-react": "^7.9.4",
		"concurrently": "^5.3.0",
		"rollup": "^1.0.0",
		"rollup-plugin-babel": "^4.2.0",
		"rollup-plugin-commonjs": "^9.2.0",
		"rollup-plugin-node-resolve": "^4.0.0",
		"rollup-plugin-uglify": "^6.0.4",
		"sass": "^1.32.12"
	},
	"scripts": {
		"sass": "dart ~/dart-sass/bin/sass.dart --watch --style expanded scss/index.scss:dist/css/client.css scss/admin.scss:dist/css/admin.css scss/blocks.scss:dist/css/blocks.css",
		"rollup": "rollup --config ./scripts/rollup.config.js -w",
		"deploy": "node scripts/deploy.js",
		"start": "concurrently -n scss,rollup \"npm run sass\" \"npm run rollup\" --raw --kill-others"
	}
}
